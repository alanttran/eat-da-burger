<div class="container">
	<h1>EAT DA BURGER</h1>
<div class="columns">
	<div class="column">
		<ul>
		{{#each burgers}}
			{{#unless this.devoured}}
		  <li class="burger-item">
		    <b>{{this.burger_name}}</b>
			{{this.devoured}}
			<a class="button is-danger"><i class="fa fa-cutlery" aria-hidden="true"></i></a>	    
		  </li>
		  {{/unless}}
		{{/each}}
		</ul>
	</div>
	<div class="column">
		<ul>
		{{#each burgers}}
			{{#if this.devoured}}
		  <li class="burger-item">
		    {{this.burger_name}}
			{{this.devoured}}    
		  </li>
		  {{/if}}
		{{/each}}
		</ul>
	</div>
	
</div>
	
	<form action="/" method="POST">
		<input type="text" class="input" placeholder="Enter burger name" name="name"><br>
		<button class="button is-primary is-large">Submit</button>
	</form>
	
</div>




